section.question
    h2.question__title Задать&#160;
        span.question__title--accent вопрос
    .question__form
        form(method='POST' action='').question__form--wrapper
            .question__form-group--conteiner
                div.question__form-group
                    input.question__form-group--control(type='text', placeholder='Представьтесь, пожалуйста' name='name')
                div.question__form-group
                    input.question__form-group--control(type='text', placeholder='Телефон для связи' name='phone')
                div.question__form-group
                    input.question__form-group--control(type='email', placeholder='E-mail' name='email')
                div.question__form-group
                    input.question__form-group--control(type='text', placeholder='Название вашей компании' name='companyName')

            .question__form-group--conteiner
                div.question__form-group
                    .solutions-filter__nav
                        .solutions-filter__nav__list__link__top.category.solutions-filter__nav__list__link__top__placeholder.question__form-group--control
